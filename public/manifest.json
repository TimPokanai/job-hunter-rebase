{
  "manifest_version": 3,
  "name": "LinkedIn Cover Letter Generator",
  "version": "1.0.0",
  "description": "A Google Chrome extension that generates cover letters using ChatGPT's API",
  "permissions": [
    "activeTab", "storage", "scripting"
  ],
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "Open the popup"
  },
  "host_permissions": ["https://www.linkedin.com/*"],
  "background": {
    "service_worker": "backgronud.js"
  }
}
